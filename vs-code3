//design a function to display element of array
#include<stdio.h>
void displayarray(int *arr,int n){
    int i;
printf("elements of array are");
    for(int i=0;i<n;i++){
        printf("%d \n",arr[i]);
       }
}
int main(){
    int n;//here to decxlare the size of array
    printf("enter the value of n:");
    scanf("%d",&n);
    int arr[n];
    printf("enter %d elements",n);
    for(int i=0;i<n;i++){
    scanf("%d",&arr[i]);}
    displayarray(arr,n);
    return 0;
}
