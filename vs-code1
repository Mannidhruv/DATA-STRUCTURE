   //use of getchar()
   #include<stdio.h>
int main(){
    char ch;
    printf("enter character :");
    //scanf("%c",&ch);
    ch=getchar();
   // printf("\nInput character is %c",ch);
   //putch(ch);
   putchar(ch);
    return 0;
    }
